<!DOCTYPE html>
<html>
  <head>
    <title>Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">

        <%= link_to "Jacob's Shop", root_path, class:"navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <%= link_to "Home", root_path, class:"nav-link" %>
              <!-- <a class="nav-link" href="<% link_to "Home", root_path %>">Home <span class="sr-only">(current)</span></a> -->
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Polityka prywatności</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Regulamin</a>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" href="#">Dostawa i płatności</a>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" href="#">O sklepie</a>
            </li>
          </ul>
        </div>

    </nav>


      <div class="container-fluid">
        <div class="row">

          <div class="col-md-2 pt-5 ">
            <h3>Kategorie</h3>
            <ul class="nav flex-column">
              <% (1..9).each do |category|%>
              <li class="nav-item  pt-3">
                <%= link_to "Kategoria#{category}", category_path(category) %>
              </li>
              <% end %>
            </ul>
          </div>

          <div class="col-md-10 pt-5">
            <%= yield %>
          </div>

        </div>
      </div>




</body>


</html>
